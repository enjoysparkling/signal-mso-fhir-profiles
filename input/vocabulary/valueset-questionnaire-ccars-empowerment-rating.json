                "system": "https://signalbhn.org/fhir/CodeSystem/questionnaire-ccars-empowerment-rating",
                "concept": [
                    {
                        "code": "1",
                        "display": "Actively engages in planning and activities to assure optimal personal health, welfare and recovery"
                    },
                    {
                        "code": "3",
                        "display": "Is aware of some available resources and generally acts to access them to assure personal health, welfare and recovery"
                    },
                    {
                        "code": "5",
                        "display": "Does not respond to signs and symptoms that may reduce personal health, welfare and recovery"
                    },
                    {
                        "code": "7",
                        "display": "Ignores or rejects offers or resources or assistance to assure personal health, welfare and recovery"
                    },
                    {
                        "code": "9",
                        "display": "Requires intervention to assure recovery"
